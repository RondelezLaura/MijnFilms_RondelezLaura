@model IEnumerable<MijnFilms_RondelezLaura.Entities.Movie>

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<table>
    <tr><td></td><td><img /></td></tr>
    <tr><td>Titel</td><td>@Model.Titel</td></tr>
    <tr><td>Jaar</td><td>@Model.Jaar</td></tr>
    <tr>
        <td>Waardering</td>
        <td>
            @for (var i = Model.Waardering; i >= 0; i--)
            {
                <span class="glyphicon glyphicon-star" style="color:black"></span>
            }
            @for (var i = 10-Model.Waardering; i >= 0; i--)
            {
                <span class="glyphicon glyphicon-star" style="color:white"></span>
            }
        </td>
    </tr>
    <tr><td>Beschrijving</td><td>@Model.Beschrijving</td></tr>
    <tr><td>Regisseur</td><td>@Model.Regisseur</td></tr>
    <tr><td>Genre</td><td>@Model.Genre</td></tr>
    <tr><td>Acteurs</td><td>@Model.Acteurs</td></tr>
</table>



